<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <EditText
        android:id="@+id/entername"
        android:layout_width="300dp"
        android:gravity="center"
        android:layout_height="35dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:hint="Enter Name"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:background="@drawable/rounded_border"/>
    <EditText
        android:id="@+id/enteraddress"
        android:layout_width="300dp"
        android:textColor="@color/black"
        android:gravity="center"
        android:layout_below="@+id/entername"
        android:layout_height="35dp"
        android:layout_marginTop="20dp"
        android:hint="Enter City/Town"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:background="@drawable/rounded_border"/>

    <EditText
        android:id="@+id/enterphone"
        android:layout_below="@id/enteraddress"
        android:layout_width="300dp"
        android:textColor="@color/black"
        android:gravity="center"
        android:layout_height="35dp"
        android:layout_marginTop="20dp"
        android:hint="Enter Phone Number"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:background="@drawable/rounded_border"/>
<!--    <ImageView-->
<!--        android:layout_marginTop="20dp"-->
<!--        android:layout_centerHorizontal="true"-->
<!--        android:id="@+id/img"-->
<!--        android:layout_width="200dp"-->
<!--        android:layout_height="200dp"-->
<!--        android:layout_below="@id/txt"-->
<!--        android:src="@drawable/ic_baseline_account_circle_24_id"/>-->

    <Button
        android:id="@+id/reg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register your house as landlord"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/enterphone"
        android:background="@drawable/rounded_buttonpink"
        android:elevation="7dp"/>
    <Button
        android:id="@+id/ell"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Existing Landlords"
        android:background="@drawable/rounded_buttonpink"
        android:layout_below="@+id/reg"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>